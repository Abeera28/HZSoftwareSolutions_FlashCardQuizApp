<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/flashcardToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1B2A6D"
        app:title="Flashcards"
        app:titleTextColor="@android:color/white" />

    <!-- Main Content Below Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Review Button -->
        <Button
            android:id="@+id/reviewFlashcardBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="12dp"
            android:text="Review Flashcards"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#1B2A6D"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_media_play"
            app:iconPadding="12dp"
            app:iconTint="@android:color/white"/>
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:visibility="gone"/>


        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flashcardRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"/>

        <!-- Empty Text -->
        <TextView
            android:id="@+id/emptyFlashcardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a new flashcard to get started"
            android:textSize="16sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addFlashcardFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/flash_add"
        app:backgroundTint="#1B2A6D"
        app:tint="@android:color/white"
        android:contentDescription="Add Flashcard"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
