<androidx.cardview.widget.CardView
    android:id="@+id/folderCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Folder Icon -->
        <ImageView
            android:id="@+id/folderIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_agenda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Folder Name -->
        <TextView
            android:id="@+id/folderNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Folder Name"
            android:textColor="#1B2A6D"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/folderIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/folderIcon" />

        <!-- Folder Description -->
        <TextView
            android:id="@+id/folderDescTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Folder description here"
            android:textColor="#555555"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/folderNameTextView"
            app:layout_constraintEnd_toStartOf="@id/folderTimeTextView"
            app:layout_constraintTop_toBottomOf="@id/folderNameTextView" />

        <!-- Flashcard count (NEW) -->
        <TextView
            android:id="@+id/flashcardCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 cards"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/folderDescTextView"
            app:layout_constraintTop_toBottomOf="@id/folderDescTextView"
            android:layout_marginTop="4dp"/>

        <!-- Timestamp RIGHT side of description -->
        <TextView
            android:id="@+id/folderTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:45 PM"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/folderDescTextView"
            app:layout_constraintBottom_toBottomOf="@id/folderDescTextView" />

        <!-- Three-dot menu -->
        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
